// Prisma schema for AI Software Value Tracker
// Using PostgreSQL (Neon) for production

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  tagline     String?
  description String?
  website     String?
  logo        String?
  category    String?
  tags        String   @default("[]")
  targetRoles String   @default("[]") // JSON array: ["marketing", "sales", "engineering"]
  launchDate  DateTime @default(now())
  source      String   @default("MANUAL")
  sourceUrl   String?
  sourceId    String?  @unique // Unique constraint to prevent duplicates from same source

  upvotes  Int @default(0)
  comments Int @default(0)
  stars    Int @default(0)

  // AI Gatekeeper viability assessment fields
  viabilityScore Float?  @default(0) // AI confidence score (0-1)
  targetAudience String? // 'b2b', 'b2c', 'developer', 'unknown'
  productType    String? // 'saas', 'library', 'framework', 'game', 'tutorial', 'other'
  businessCategory String? // 'marketing' | 'sales' | 'customer_service' | 'productivity' | 'developer' | 'other'

  // Commercial signals
  hasPricingPage    Boolean    @default(false)
  hasTeamPage       Boolean    @default(false)
  hasTermsOfService Boolean    @default(false)

  // AI-Enriched product data (Track B enhancement)
  extendedDescription String?  // AI-generated 2-3 paragraph description
  keyFeatures         String   @default("[]") // JSON array of key features
  useCases            String   @default("[]") // JSON array of use cases
  limitations         String   @default("[]") // JSON array of limitations
  bestFor             String   @default("[]") // JSON array of ideal user personas
  enrichedAt          DateTime? // When enrichment was last run

  scores Score[]
  // rawData removed to save storage (free tier: 0.5GB limit)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([source])
  @@index([launchDate])
  @@index([category])
  @@index([targetAudience])
  @@index([productType])
  @@index([enrichedAt])
}

model Score {
  id        String  @id @default(cuid())
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  functionalCoverage Int @default(0)
  usability          Int @default(0)
  innovation         Int @default(0)
  pricing            Int @default(0)
  integration        Int @default(0)
  security           Int @default(0)

  compositeScore Int     @default(0)
  confidence     Float   @default(0)
  reasoning      String?
  version        Int     @default(1)

  generatedAt DateTime @default(now())

  @@index([productId])
  @@index([compositeScore])
}

model OpenSourceTool {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  tagline     String?
  description String?
  repoUrl     String?
  spaceUrl    String?
  logo        String?
  runtime     String?
  license     String?
  tags        String   @default("[]")
  launchDate  DateTime @default(now())
  source      String   @default("HUGGING_FACE")
  sourceUrl   String?
  sourceId    String?  @unique
  author      String?

  likes     Int @default(0)
  downloads Int @default(0)

  // AI Gatekeeper viability assessment fields (parity with Product)
  viabilityScore Float?  @default(0)
  targetAudience String?
  productType    String?
  businessCategory String?

  // AI-Enriched product data (Track B enhancement - parity with Product)
  extendedDescription String?  // AI-generated 2-3 paragraph description
  keyFeatures         String   @default("[]") // JSON array of key features
  useCases            String   @default("[]") // JSON array of use cases
  limitations         String   @default("[]") // JSON array of limitations
  bestFor             String   @default("[]") // JSON array of ideal user personas
  enrichedAt          DateTime? // When enrichment was last run

  scores OpenSourceScore[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([source])
  @@index([launchDate])
  @@index([author])
  @@index([viabilityScore])
  @@index([enrichedAt])
}

model OpenSourceScore {
  id               String          @id @default(cuid())
  openSourceToolId String
  openSourceTool   OpenSourceTool  @relation(fields: [openSourceToolId], references: [id], onDelete: Cascade)

  functionalCoverage Int @default(0)
  usability          Int @default(0)
  innovation         Int @default(0)
  pricing            Int @default(0)
  integration        Int @default(0)
  security           Int @default(0)

  compositeScore Int     @default(0)
  confidence     Float   @default(0)
  reasoning      String?
  version        Int     @default(1)

  generatedAt DateTime @default(now())

  @@index([openSourceToolId])
  @@index([compositeScore])
}

model PipelineJob {
  id          String   @id @default(cuid())
  type        String   // 'scrape', 'assess', 'score', 'cleanup', 'full-pipeline'
  status      String   @default("pending") // 'pending', 'running', 'completed', 'failed'
  progress    Float    @default(0) // 0-100 percentage
  currentStep String?  // Current step description
  itemsProcessed Int   @default(0)
  itemsTotal     Int?  // null if unknown
  currentItem    String? // Name of item currently being processed
  timeElapsed    Int   @default(0) // seconds
  errors         Int   @default(0)
  metadata       String @default("{}") // JSON for job-specific data
  activityLog    String @default("[]") // JSON array of recent activity entries
  startedAt      DateTime?
  completedAt    DateTime?
  errorMessage   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([startedAt])
  @@index([type])
}
